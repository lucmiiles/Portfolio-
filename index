<script>
    // Security Configuration
    const SECURITY_CONFIG = {
        PASSWORD_HASH: '5e884898da28047151d0e56f8dc6292773603d0d6aabbdd62a11ef721d1542d8', // SHA-256 of 'myportfolio2024'
        SESSION_TIMEOUT: 30 * 60 * 1000, // 30 minutes
        ENCRYPTION_KEY: 'portfolio-2024-secure-key',
        MAX_LOGIN_ATTEMPTS: 5,
        LOCKOUT_DURATION: 15 * 60 * 1000 // 15 minutes
    };

    // Simple encryption/decryption
    function encryptData(data) {
        return btoa(JSON.stringify(data));
    }

    function decryptData(encrypted) {
        try {
            return JSON.parse(atob(encrypted));
        } catch {
            return null;
        }
    }

    // SHA-256 hashing function
    async function hashPassword(password) {
        const msgBuffer = new TextEncoder().encode(password);
        const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
        const hashArray = Array.from(new Uint8Array(hashBuffer));
        return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
    }

    // Login attempt tracking
    function checkLoginAttempts() {
        const attempts = JSON.parse(localStorage.getItem('loginAttempts') || '{"count": 0, "timestamp": 0}');
        const now = Date.now();
        
        if (attempts.count >= SECURITY_CONFIG.MAX_LOGIN_ATTEMPTS) {
            if (now - attempts.timestamp < SECURITY_CONFIG.LOCKOUT_DURATION) {
                const remaining = Math.ceil((SECURITY_CONFIG.LOCKOUT_DURATION - (now - attempts.timestamp)) / 60000);
                showError(`Too many failed attempts. Try again in ${remaining} minutes.`);
                return false;
            }
            // Reset if lockout expired
            attempts.count = 0;
        }
        return true;
    }

    function recordFailedAttempt() {
        const attempts = JSON.parse(localStorage.getItem('loginAttempts') || '{"count": 0, "timestamp": 0}');
        attempts.count++;
        attempts.timestamp = Date.now();
        localStorage.setItem('loginAttempts', JSON.stringify(attempts));
    }

    function resetLoginAttempts() {
        localStorage.removeItem('loginAttempts');
    }

    // Session management
    let sessionTimeout;

    function resetSessionTimeout() {
        clearTimeout(sessionTimeout);
        sessionTimeout = setTimeout(() => {
            logout();
            alert('Session expired. Please login again.');
        }, SECURITY_CONFIG.SESSION_TIMEOUT);
    }

    function initSessionManagement() {
        // Reset timeout on user activity
        ['mousedown', 'keypress', 'scroll', 'touchstart'].forEach(event => {
            document.addEventListener(event, resetSessionTimeout, true);
        });
        resetSessionTimeout();
    }

    // Login function
    async function checkPassword() {
        if (!checkLoginAttempts()) return;

        const password = document.getElementById('passwordInput').value;
        const hash = await hashPassword(password);
        
        if (hash === SECURITY_CONFIG.PASSWORD_HASH) {
            resetLoginAttempts();
            sessionStorage.setItem('authenticated', encryptData({
                timestamp: Date.now(),
                hash: hash
            }));
            showDashboard();
            initSessionManagement();
        } else {
            recordFailedAttempt();
            showError('Incorrect password');
            document.getElementById('passwordInput').value = '';
        }
    }

    function showError(message) {
        const errorEl = document.getElementById('errorMessage');
        errorEl.textContent = message;
        errorEl.classList.remove('hidden');
    }

    function showDashboard() {
        document.getElementById('loginScreen').classList.add('hidden');
        document.getElementById('dashboard').classList.remove('hidden');
        loadData();
    }

    function logout() {
        sessionStorage.removeItem('authenticated');
        clearTimeout(sessionTimeout);
        document.getElementById('dashboard').classList.add('hidden');
        document.getElementById('loginScreen').classList.remove('hidden');
        document.getElementById('passwordInput').value = '';
        document.getElementById('errorMessage').classList.add('hidden');
    }

    // Check authentication on load
    window.onload = function() {
        const auth = sessionStorage.getItem('authenticated');
        if (auth) {
            const data = decryptData(auth);
            if (data && data.hash === SECURITY_CONFIG.PASSWORD_HASH) {
                // Check if session hasn't expired
                if (Date.now() - data.timestamp < SECURITY_CONFIG.SESSION_TIMEOUT) {
                    showDashboard();
                    initSessionManagement();
                    return;
                }
            }
        }
        // Show login screen
        document.getElementById('loginScreen').classList.remove('hidden');
    };

    // Data Management
    const portfolioData = {
        netWorth: 140000,
        investment: 50000,
        reserve: 90000,
        reserveProviders: [
            { name: 'Provider A', amount: 45000 },
            { name: 'Provider B', amount: 45000 }
        ],
        investmentProviders: [
            { name: 'Provider C', amount: 20000 },
            { name: 'Provider D', amount: 15000 },
            { name: 'Provider E', amount: 15000 }
        ],
        quarterlyReview: [
            {
                quarter: 'Q1 2024',
                months: [
                    { name: 'January', value: 135000 },
                    { name: 'February', value: 137000 },
                    { name: 'March', value: 138000 }
                ],
                total: 138000
            },
            {
                quarter: 'Q2 2024',
                months: [
                    { name: 'April', value: 138500 },
                    { name: 'May', value: 139000 },
                    { name: 'June', value: 139500 }
                ],
                total: 139500
            },
            {
                quarter: 'Q3 2024',
                months: [
                    { name: 'July', value: 139800 },
                    { name: 'August', value: 139900 },
                    { name: 'September', value: 140000 }
                ],
                total: 140000
            }
        ]
    };

    function formatCurrency(value) {
        return new Intl.NumberFormat('en-GB', {
            style: 'currency',
            currency: 'GBP',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
        }).format(value);
    }

    function loadData() {
        // Load overview
        document.getElementById('netWorthValue').textContent = formatCurrency(portfolioData.netWorth);
        document.getElementById('investmentValue').textContent = formatCurrency(portfolioData.investment);
        document.getElementById('reserveValue').textContent = formatCurrency(portfolioData.reserve);

        const investPercent = ((portfolioData.investment / portfolioData.netWorth) * 100).toFixed(1);
        const reservePercent = ((portfolioData.reserve / portfolioData.netWorth) * 100).toFixed(1);
        
        document.getElementById('investmentPercent').textContent = investPercent;
        document.getElementById('reservePercent').textContent = reservePercent;

        // Load providers
        loadProviders();
        
        // Load quarterly review
        loadQuarterlyReview();
    }

    function loadProviders() {
        // Reserve providers
        const reserveContainer = document.getElementById('reserveProviders');
        reserveContainer.innerHTML = portfolioData.reserveProviders.map(provider => `
            <div class="provider-card">
                <div class="provider-name">${provider.name}</div>
                <div class="provider-amount">${formatCurrency(provider.amount)}</div>
            </div>
        `).join('');

        // Investment providers
        const investmentContainer = document.getElementById('investmentProviders');
        investmentContainer.innerHTML = portfolioData.investmentProviders.map(provider => `
            <div class="provider-card">
                <div class="provider-name">${provider.name}</div>
                <div class="provider-amount">${formatCurrency(provider.amount)}</div>
            </div>
        `).join('');
    }

    function loadQuarterlyReview() {
        const container = document.getElementById('quarterlyReview');
        container.innerHTML = portfolioData.quarterlyReview.map(quarter => `
            <div class="quarter-card">
                <div class="quarter-title">${quarter.quarter}</div>
                <div class="quarter-months">
                    ${quarter.months.map(month => `
                        <div class="quarter-month">
                            <span>${month.name}</span>
                            <span class="quarter-month-value">${formatCurrency(month.value)}</span>
                        </div>
                    `).join('')}
                </div>
                <div class="quarter-total">
                    <div class="quarter-total-label">Quarter End</div>
                    <div class="quarter-total-value">${formatCurrency(quarter.total)}</div>
                </div>
            </div>
        `).join('');
    }

    // Navigation
    function scrollToSection(sectionId) {
        const section = document.getElementById(sectionId);
        if (section) {
            section.scrollIntoView({ behavior: 'smooth' });
            document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
            event.target.classList.add('active');
        }
    }

    // Auto-update active nav on scroll
    window.addEventListener('scroll', () => {
        const sections = ['overview', 'accounts', 'quarterly'];
        let currentSection = '';
        
        sections.forEach(sectionId => {
            const section = document.getElementById(sectionId);
            if (section) {
                const rect = section.getBoundingClientRect();
                if (rect.top <= 200 && rect.bottom >= 200) {
                    currentSection = sectionId;
                }
            }
        });
        
        if (currentSection) {
            document.querySelectorAll('.nav-item').forEach((item, index) => {
                item.classList.remove('active');
                if (sections[index] === currentSection) {
                    item.classList.add('active');
                }
            });
        }
    });

    // Enter key support for login
    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('passwordInput')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') checkPassword();
        });
    });
</script>
```

</body>
</html>
